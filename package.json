{
  "name": "nestjs-starter",
  "version": "0.4.0",
  "description": "NestJs Starter Kit for not to start from scratch again",
  "author": "Ruslan Gonzalez <ruslanguns@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/ruslanguns/nestjs-starter"
  },
  "private": true,
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "prepare": "husky install",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "db:build": "docker-compose -f database.yml up",
    "db:rebuild": "docker-compose -f database.yml build",
    "db:start": "docker-compose -f database.yml start",
    "db:stop": "docker-compose -f database.yml stop",
    "db:debug": "docker-compose -f database.yml logs -f",
    "deploy:now": "yarn run build && now",
    "deploy:docker:build": "docker-compose -f deploy.yml up",
    "deploy:docker:rebuild": "docker-compose -f deploy.yml build",
    "deploy:docker:recreate": "docker-compose -f deploy.yml up --force-recreate",
    "deploy:docker:start": "docker-compose -f deploy.yml start",
    "deploy:docker:stop": "docker-compose -f deploy.yml stop",
    "deploy:docker:debug": "docker-compose -f deploy.yml debug",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js --config src/ormconfig.ts",
    "typeorm:migrate": "npm run typeorm migration:generate -- -n",
    "typeorm:run": "npm run typeorm migration:run",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "commit": "git-cz"
  },
  "dependencies": {
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@nestjs-modules/mailer": "^1.6.1",
    "@nestjs/common": "^8.3.1",
    "@nestjs/config": "^1.2.0",
    "@nestjs/core": "^8.3.1",
    "@nestjs/jwt": "^8.0.0",
    "@nestjs/passport": "^8.2.1",
    "@nestjs/platform-express": "^8.3.1",
    "@nestjs/schedule": "^1.0.2",
    "@nestjs/swagger": "^5.2.0",
    "@nestjs/typeorm": "^8.0.3",
    "@rewiko/crud": "^5.1.1",
    "@rewiko/crud-request": "^5.1.1",
    "@rewiko/crud-typeorm": "^5.1.1",
    "@ruso/common": "^0.1.1",
    "@ruso/nestjs": "^0.1.1",
    "bcrypt": "^5.0.1",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "compression": "^1.7.4",
    "express-rate-limit": "^6.3.0",
    "helmet": "5.0.2",
    "joi": "^17.6.0",
    "passport": "0.5.2",
    "passport-jwt": "4.0.0",
    "passport-local": "1.0.0",
    "pg": "8.7.3",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "7.5.4",
    "swagger-ui-express": "4.3.0",
    "typeorm": "0.2.41"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.2.1",
    "@nestjs/schematics": "^8.0.6",
    "@nestjs/testing": "^8.3.1",
    "@types/bcrypt": "5.0.0",
    "@types/bcryptjs": "2.4.2",
    "@types/express": "4.17.13",
    "@types/jest": "27.4.0",
    "@types/joi": "17.2.3",
    "@types/node": "16.11.25",
    "@types/passport-jwt": "3.0.6",
    "@types/passport-local": "1.0.34",
    "@types/qs": "^6.9.7",
    "@types/supertest": "2.0.11",
    "@typescript-eslint/eslint-plugin": "5.12.1",
    "@typescript-eslint/parser": "5.12.1",
    "commitizen": "4.2.4",
    "conventional-changelog-cli": "2.2.2",
    "cross-env": "7.0.3",
    "eslint": "8.9.0",
    "eslint-config-prettier": "8.4.0",
    "eslint-plugin-import": "2.25.4",
    "husky": "7.0.4",
    "jest": "27.5.1",
    "lint-staged": "12.3.4",
    "prettier": "2.5.1",
    "supertest": "6.2.2",
    "ts-jest": "27.1.3",
    "ts-loader": "9.2.6",
    "ts-node": "10.5.0",
    "tsconfig-paths": "3.12.0",
    "typescript": "4.5.5"
  },
  "resolutions": {
    "@types/qs": "6.9.6",
    "minimist": "^1.2.2",
    "cryptiles": "^4.1.2",
    "hoek": "^6.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --ext ts"
    ],
    "*.{md,html,json,js}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}

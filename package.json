{
  "name": "nestjs-starter",
  "version": "0.4.0",
  "description": "NestJs Starter Kit for not to start from scratch again",
  "author": "Ruslan Gonzalez <ruslanguns@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/ruslanguns/nestjs-starter"
  },
  "private": true,
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "db:build": "docker-compose -f database.yml up",
    "db:rebuild": "docker-compose -f database.yml build",
    "db:start": "docker-compose -f database.yml start",
    "db:stop": "docker-compose -f database.yml stop",
    "db:debug": "docker-compose -f database.yml logs -f",
    "deploy:now": "yarn run build && now",
    "deploy:docker:build": "docker-compose -f deploy.yml up",
    "deploy:docker:rebuild": "docker-compose -f deploy.yml build",
    "deploy:docker:recreate": "docker-compose -f deploy.yml up --force-recreate",
    "deploy:docker:start": "docker-compose -f deploy.yml start",
    "deploy:docker:stop": "docker-compose -f deploy.yml stop",
    "deploy:docker:debug": "docker-compose -f deploy.yml debug",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js --config src/ormconfig.ts",
    "typeorm:migrate": "npm run typeorm migration:generate -- -n",
    "typeorm:run": "npm run typeorm migration:run",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "commit": "git-cz"
  },
  "dependencies": {
    "@commitlint/cli": "8.3.5",
    "@commitlint/config-conventional": "8.3.4",
    "@hapi/joi": "17.1.1",
    "@nestjs-modules/mailer": "1.4.2",
    "@nestjs/common": "7.0.9",
    "@nestjs/config": "0.4.0",
    "@nestjs/core": "7.0.9",
    "@nestjs/jwt": "7.0.0",
    "@nestjs/passport": "7.0.0",
    "@nestjs/platform-express": "7.0.9",
    "@nestjs/schedule": "0.3.1",
    "@nestjs/swagger": "4.5.3",
    "@nestjs/typeorm": "7.0.0",
    "@nestjsx/crud": "4.5.0",
    "@nestjsx/crud-request": "4.4.5",
    "@nestjsx/crud-typeorm": "4.6.2",
    "@ruso/common": "0.0.1",
    "@ruso/nestjs": "0.0.1",
    "bcrypt": "4.0.1",
    "bcryptjs": "2.4.3",
    "class-transformer": "0.2.3",
    "class-validator": "0.12.2",
    "compression": "1.7.4",
    "express-rate-limit": "5.1.3",
    "helmet": "3.22.0",
    "passport": "0.4.1",
    "passport-jwt": "4.0.0",
    "passport-local": "1.0.0",
    "pg": "8.0.3",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "6.5.5",
    "swagger-ui-express": "4.1.4",
    "typeorm": "0.2.24"
  },
  "devDependencies": {
    "@nestjs/cli": "7.1.4",
    "@nestjs/schematics": "7.0.0",
    "@nestjs/testing": "7.0.9",
    "@types/bcrypt": "3.0.0",
    "@types/bcryptjs": "2.4.2",
    "@types/express": "4.17.6",
    "@types/hapi__joi": "16.0.12",
    "@types/jest": "25.2.1",
    "@types/node": "13.13.4",
    "@types/passport-jwt": "3.0.3",
    "@types/passport-local": "1.0.33",
    "@types/supertest": "2.0.9",
    "@typescript-eslint/eslint-plugin": "2.30.0",
    "@typescript-eslint/parser": "2.30.0",
    "commitizen": "4.0.5",
    "conventional-changelog-cli": "2.0.31",
    "cross-env": "7.0.2",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-import": "2.20.2",
    "husky": "4.2.5",
    "jest": "25.1.0",
    "lint-staged": "10.2.2",
    "prettier": "2.0.5",
    "supertest": "4.0.2",
    "ts-jest": "25.4.0",
    "ts-loader": "6.2.2",
    "ts-node": "8.10.1",
    "tsconfig-paths": "3.9.0",
    "typescript": "3.8.3"
  },
  "resolutions": {
    "minimist": "^1.2.2",
    "cryptiles": "^4.1.2",
    "hoek": "^6.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --ext ts"
    ],
    "*.{md,html,json,js}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}

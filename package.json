{
  "name": "nestjs-starter",
  "version": "0.0.1",
  "description": "NestJs Starter Kit for not to start from scratch again",
  "author": "Ruslan Gonzalez <ruslanguns@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/ruslanguns/nestjs-starter"
  },
  "private": true,
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js --config src/ormconfig.ts",
    "typeorm:migrate": "npm run typeorm migration:generate -- -n",
    "typeorm:run": "npm run typeorm migration:run"
  },
  "dependencies": {
    "@hapi/joi": "17.1.1",
    "@nestjs-modules/mailer": "1.3.12",
    "@nestjs/common": "7.0.5",
    "@nestjs/config": "0.4.0",
    "@nestjs/core": "7.0.5",
    "@nestjs/jwt": "7.0.0",
    "@nestjs/passport": "7.0.0",
    "@nestjs/platform-express": "7.0.5",
    "@nestjs/schedule": "0.3.0",
    "@nestjs/typeorm": "7.0.0",
    "bcrypt": "4.0.1",
    "class-transformer": "0.2.3",
    "class-validator": "0.11.1",
    "compression": "1.7.4",
    "express-rate-limit": "5.1.1",
    "helmet": "3.21.3",
    "passport": "0.4.1",
    "passport-jwt": "4.0.0",
    "passport-local": "1.0.0",
    "pg": "8.0.0",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "6.5.4",
    "typeorm": "0.2.24"
  },
  "devDependencies": {
    "@nestjs/cli": "7.0.2",
    "@nestjs/schematics": "7.0.0",
    "@nestjs/testing": "7.0.5",
    "@types/bcrypt": "3.0.0",
    "@types/express": "4.17.3",
    "@types/hapi__joi": "16.0.12",
    "@types/jest": "25.1.4",
    "@types/node": "13.9.3",
    "@types/passport-jwt": "3.0.3",
    "@types/passport-local": "1.0.33",
    "@types/supertest": "2.0.8",
    "@typescript-eslint/eslint-plugin": "2.24.0",
    "@typescript-eslint/parser": "2.24.0",
    "cross-env": "7.0.2",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.1",
    "eslint-plugin-import": "2.20.1",
    "jest": "25.1.0",
    "prettier": "1.19.1",
    "supertest": "4.0.2",
    "ts-jest": "25.2.1",
    "ts-loader": "6.2.2",
    "ts-node": "8.8.2",
    "tsconfig-paths": "3.9.0",
    "typescript": "3.8.3"
  },
  "resolutions": {
    "minimist": "^1.2.2",
    "cryptiles": "^4.1.2",
    "hoek": "^6.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
